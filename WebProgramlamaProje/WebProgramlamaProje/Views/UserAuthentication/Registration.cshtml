@model WebProgramlamaProje.Models.Dto.RegistrationDto
@{
    Layout = null;
}

<link href="/css/bootstrap.min.css" rel="stylesheet" />
@Html.ValidationSummary()
<div class="container">
    <div class="row">
        <div class="col-md-6 offset-md-3">
            <h3 class="text-center">Registration</h3>
            <form asp-action="Registration" method="post" style="border: 3px solid #f1f1f1; width: 60%; margin: auto; padding: 16px; border-radius: 10px;">

                <div class="form-group">
                    <label for="FirstName">First Name</label>
                    <input type="text" class="form-control" asp-for="FirstName" />
                    <span class="text-danger" asp-validation-for="FirstName"></span>
                </div>

                <div class="form-group">
                    <label for="LastName">Last Name</label>
                    <input type="text" class="form-control" asp-for="LastName" />
                    <span class="text-danger" asp-validation-for="LastName"></span>
                </div>

                <div class="form-group">
                    <label for="Email">Email</label>
                    <input type="text" class="form-control" asp-for="Email" />
                    <span class="text-danger" asp-validation-for="Email"></span>
                </div>

                <div class="form-group">
                    <label for="Username">Username</label>
                    <input type="text" class="form-control" asp-for="Username" />
                    <span class="text-danger" asp-validation-for="Username"></span>
                </div>

                <div class="form-group">
                    <label for="Password">Password (eg. John@123)</label>
                    <input type="password" class="form-control" asp-for="Password" />
                    <span class="text-danger" asp-validation-for="Password"></span>
                </div>

                <div class="form-group">
                    <label for="PasswordConfirm">Password Confirm</label>
                    <input type="password" class="form-control" asp-for="PasswordConfirm" />
                    <span class="text-danger" asp-validation-for="PasswordConfirm"></span>
                </div>

                @if (TempData["AlertMessage"] != null)
                {
                    <div class="form-group text-center">
                        <span class="text-info">@TempData["AlertMessage"]</span>
                    </div>
                }

            <button type="submit" class="btn btn-purple" style="border-color: #aa048b; background-color: #aa048b;">Register</button>
                <a class="btn btn-light-purple" href="/UserAuthentication/Login" style="border-color: #aa048b; color: #aa048b;">Login</a>
            </form>
        </div>
    </div>
</div>
