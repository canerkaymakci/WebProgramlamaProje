@model WebProgramlamaProje.Models.Domain.TicketType

@inject IStringLocalizer<AdminController> Localizer
@inject IHttpContextAccessor HttpContextAccessor
@using Microsoft.AspNetCore.Localization

@{


    var currentCulture = HttpContextAccessor.HttpContext?.Features.Get<IRequestCultureFeature>()?.RequestCulture?.Culture;
}

<form asp-action="UpdateTicketType" asp-controller="Admin" method="post">
    <div class=" form-group">
        <input type="hidden" id="FlightId" name="FlightId" value="@Model.FlightId" />
        <input type="hidden" id="Id" name="Id" value="@Model.Id" />
    </div>

    <div class="form-group">
        <label asp-for="Name" class="control-label">@Localizer["ticketType"]</label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Properties" class="control-label">@Localizer["ticketFeatures"]</label>
        <textarea asp-for="Properties" class="form-control"></textarea>
        <span asp-validation-for="Properties" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Price" class="control-label">@Localizer["ticketPrice"]</label>
        <input asp-for="Price" class="form-control" />
        <span asp-validation-for="Price" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Currency" class="control-label">@Localizer["ticketCurrency"]</label>
        <input asp-for="Currency" class="form-control" />
        <span asp-validation-for="Currency" class="text-danger"></span>
    </div>



    <button type="submit" class="btn btn-primary">@Localizer["updateTicketType"]</button>
</form>